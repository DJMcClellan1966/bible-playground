<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    
    <!-- ======================== -->
    <!-- ENHANCED COLOR PALETTE   -->
    <!-- ======================== -->
    
    <!-- Primary Brand Colors -->
    <Color x:Key="BrandPrimary">#4A90D9</Color>
    <Color x:Key="BrandPrimaryDark">#2E5A8A</Color>
    <Color x:Key="BrandPrimaryLight">#7AB8F5</Color>
    <Color x:Key="BrandSecondary">#D4AF37</Color>
    <Color x:Key="BrandSecondaryDark">#A68828</Color>
    <Color x:Key="BrandSecondaryLight">#F0D060</Color>
    
    <!-- Spiritual/Holy Colors -->
    <Color x:Key="HolyGold">#FFD700</Color>
    <Color x:Key="HolyGoldLight">#FFF4B0</Color>
    <Color x:Key="DivineWhite">#FFFAF0</Color>
    <Color x:Key="SacredPurple">#6B5B95</Color>
    <Color x:Key="HeavenlyBlue">#87CEEB</Color>
    <Color x:Key="EarthBrown">#8B4513</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundDark">#1A1A2E</Color>
    <Color x:Key="BackgroundMedium">#16213E</Color>
    <Color x:Key="BackgroundLight">#0F3460</Color>
    <Color x:Key="BackgroundCard">#252547</Color>
    <Color x:Key="BackgroundCardHover">#2D2D5A</Color>
    
    <!-- Light Mode Backgrounds -->
    <Color x:Key="BackgroundLightMode">#F8F6F0</Color>
    <Color x:Key="BackgroundLightCard">#FFFFFF</Color>
    <Color x:Key="BackgroundLightCardHover">#F5F3ED</Color>
    <Color x:Key="ParchmentLight">#FFF8E7</Color>
    <Color x:Key="ParchmentDark">#F5E6C8</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B0C0</Color>
    <Color x:Key="TextMuted">#707090</Color>
    <Color x:Key="TextAccent">#FFD700</Color>
    <Color x:Key="TextDark">#2C2C2C</Color>
    <Color x:Key="TextDarkSecondary">#5A5A5A</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessGreen">#4CAF50</Color>
    <Color x:Key="WarningOrange">#FF9800</Color>
    <Color x:Key="ErrorRed">#F44336</Color>
    <Color x:Key="InfoBlue">#2196F3</Color>
    
    <!-- Character Role Colors -->
    <Color x:Key="ProphetColor">#9C27B0</Color>
    <Color x:Key="KingColor">#FFD700</Color>
    <Color x:Key="ApostleColor">#2196F3</Color>
    <Color x:Key="PatriarchColor">#795548</Color>
    <Color x:Key="WomanOfFaithColor">#E91E63</Color>
    
    <!-- ======================== -->
    <!-- GRADIENT BRUSHES         -->
    <!-- ======================== -->
    
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A1A2E" Offset="0.0" />
        <GradientStop Color="#16213E" Offset="0.5" />
        <GradientStop Color="#0F3460" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#252547" Offset="0.0" />
        <GradientStop Color="#1F1F3D" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GoldGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFD700" Offset="0.0" />
        <GradientStop Color="#FFA500" Offset="0.5" />
        <GradientStop Color="#FFD700" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="BlueGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4A90D9" Offset="0.0" />
        <GradientStop Color="#2E5A8A" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#6B5B95" Offset="0.0" />
        <GradientStop Color="#4A3F6B" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SunriseGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#FF6B6B" Offset="0.0" />
        <GradientStop Color="#FFA500" Offset="0.5" />
        <GradientStop Color="#FFD700" Offset="1.0" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ParchmentGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFF8E7" Offset="0.0" />
        <GradientStop Color="#F5E6C8" Offset="1.0" />
    </LinearGradientBrush>
    
    <RadialGradientBrush x:Key="GlowBrush" Center="0.5,0.5" Radius="0.5">
        <GradientStop Color="#60FFD700" Offset="0.0" />
        <GradientStop Color="#20FFD700" Offset="0.7" />
        <GradientStop Color="#00FFD700" Offset="1.0" />
    </RadialGradientBrush>
    
    <!-- ======================== -->
    <!-- SHADOWS                  -->
    <!-- ======================== -->
    
    <Shadow x:Key="CardShadow" 
            Brush="Black" 
            Offset="4,4" 
            Radius="12" 
            Opacity="0.3" />
    
    <Shadow x:Key="ButtonShadow" 
            Brush="#FFD700" 
            Offset="0,2" 
            Radius="8" 
            Opacity="0.4" />
    
    <Shadow x:Key="TextGlow" 
            Brush="#FFD700" 
            Offset="0,0" 
            Radius="8" 
            Opacity="0.6" />
    
    <Shadow x:Key="AvatarShadow" 
            Brush="Black" 
            Offset="2,2" 
            Radius="6" 
            Opacity="0.4" />
    
    <!-- ======================== -->
    <!-- ENHANCED STYLES          -->
    <!-- ======================== -->
    
    <!-- Primary Button -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BrandSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource BackgroundDark}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="24,14" />
        <Setter Property="Shadow" Value="{StaticResource ButtonShadow}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.96" />
                            <Setter Property="BackgroundColor" Value="{StaticResource BrandSecondaryDark}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <!-- Secondary Button -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource BrandSecondary}" />
        <Setter Property="BorderColor" Value="{StaticResource BrandSecondary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="20,12" />
    </Style>
    
    <!-- Card Frame -->
    <Style x:Key="CardFrameStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGradient}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="#40FFFFFF" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Shadow" Value="{StaticResource CardShadow}" />
    </Style>
    
    <!-- Elevated Card -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundCard}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Shadow">
            <Shadow Brush="Black" Offset="0,8" Radius="24" Opacity="0.25" />
        </Setter>
    </Style>
    
    <!-- Golden Title -->
    <Style x:Key="GoldenTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource HolyGold}" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="Shadow" Value="{StaticResource TextGlow}" />
    </Style>
    
    <!-- Section Header -->
    <Style x:Key="SectionHeaderStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,16,0,8" />
    </Style>
    
    <!-- Body Text -->
    <Style x:Key="BodyTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="LineHeight" Value="1.4" />
    </Style>
    
    <!-- Scripture Text -->
    <Style x:Key="ScriptureTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource ParchmentLight}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Italic" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="Padding" Value="16" />
    </Style>
    
    <!-- Chat Input -->
    <Style x:Key="ChatInputStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundLight}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    
    <!-- Character Name Tag -->
    <Style x:Key="CharacterNameTagStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="8,4" />
    </Style>
    
    <!-- Roundtable Participant Chip -->
    <Style x:Key="ParticipantChipStyle" TargetType="Border">
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="BackgroundColor" Value="#20FFFFFF" />
    </Style>
    
    <!-- Message Bubble - User -->
    <Style x:Key="UserMessageBubbleStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BrandPrimary}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16,16,4,16" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="MaximumWidthRequest" Value="300" />
    </Style>
    
    <!-- Message Bubble - Character -->
    <Style x:Key="CharacterMessageBubbleStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundCard}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="#30FFFFFF" />
        <Setter Property="StrokeShape" Value="RoundRectangle 16,16,16,4" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="MaximumWidthRequest" Value="320" />
    </Style>
    
    <!-- Fancy Divider -->
    <Style x:Key="FancyDividerStyle" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1" />
        <Setter Property="Color" Value="{StaticResource HolyGold}" />
        <Setter Property="Opacity" Value="0.3" />
        <Setter Property="Margin" Value="20,16" />
    </Style>
    
</ResourceDictionary>
