        ContentTemplate="{DataTemplate views:HallowLoginPage}"
        Route="login"
        FlyoutItemIsVisible="False" />
    
    <!-- Onboarding Flow (new users) -->
    <ShellContent
        Title="Personalize"
        ContentTemplate="{DataTemplate views:OnboardingPage}"
        Route="onboarding"
        FlyoutItemIsVisible="False" />
    
