<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AI_Bible_App.Maui.Controls.SpiritualLoadingIndicator">
    
    <Grid x:Name="LoadingContainer"
          HorizontalOptions="Center"
          VerticalOptions="Center">
        
        <!-- Outer glow ring -->
        <Ellipse x:Name="OuterRing"
                 WidthRequest="80"
                 HeightRequest="80"
                 StrokeThickness="2"
                 Opacity="0.3">
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFD700" Offset="0" />
                    <GradientStop Color="#FFA500" Offset="1" />
                </LinearGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
        
        <!-- Middle spinning ring -->
        <Ellipse x:Name="MiddleRing"
                 WidthRequest="60"
                 HeightRequest="60"
                 StrokeThickness="3"
                 StrokeDashArray="8,4"
                 Opacity="0.6">
            <Ellipse.Stroke>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4169E1" Offset="0" />
                    <GradientStop Color="#6495ED" Offset="1" />
                </LinearGradientBrush>
            </Ellipse.Stroke>
        </Ellipse>
        
        <!-- Inner pulsing circle -->
        <Ellipse x:Name="InnerCircle"
                 WidthRequest="40"
                 HeightRequest="40"
                 Opacity="0.8">
            <Ellipse.Fill>
                <RadialGradientBrush Center="0.5,0.5" Radius="0.5">
                    <GradientStop Color="#FFD700" Offset="0" />
                    <GradientStop Color="#FFA500" Offset="0.7" />
                    <GradientStop Color="Transparent" Offset="1" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        
        <!-- Center icon -->
        <Label x:Name="CenterIcon"
               Text="âœ"
               FontSize="20"
               TextColor="#FFFFFF"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontAttributes="Bold" />
        
        <!-- Loading text below -->
        <VerticalStackLayout VerticalOptions="End"
                             HorizontalOptions="Center"
                             Margin="0,50,0,0">
            <Label x:Name="LoadingText"
                   Text="Seeking wisdom..."
                   FontSize="12"
                   TextColor="#a0aec0"
                   HorizontalOptions="Center" />
            <Label x:Name="DotsLabel"
                   Text="..."
                   FontSize="12"
                   TextColor="#a0aec0"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Grid>
</ContentView>
